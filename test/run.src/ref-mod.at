AT_SETUP([Linkage Bound check])

AT_DATA([calle.cob], [
       IDENTIFICATION DIVISION.
       PROGRAM-ID. calle.
       ENVIRONMENT DIVISION.
       CONFIGURATION SECTION.
       DATA DIVISION.
       WORKING-STORAGE SECTION.
       01  W-LG                      PIC S9(9) COMP-5 SYNC .
       01 W-VPTR-A992                      PIC       X(234).
       LINKAGE SECTION.
       01  ARG5-XJ5.                                                    
            05 CARARG5    PIC X OCCURS 2 DEPENDING ON W-LG.
       PROCEDURE DIVISION USING ARG5-XJ5.
       MAIN SECTION.
       M10.
           DISPLAY "ENTREE TESTIT".
		   MOVE SPACES TO W-VPTR-A992.
		   MOVE 1000 TO W-LG.
		   DISPLAY "ARG5-XJ5 3 POSITIONS : '" ARG5-XJ5 "'".
		   MOVE ARG5-XJ5 TO W-VPTR-A992.
		   DISPLAY "W-VPTR-A992 3 POSITIONS : '" W-VPTR-A992 "'".
		   MOVE SPACES TO W-VPTR-A992.
		   MOVE ARG5-XJ5 (1:W-LG) TO W-VPTR-A992.
		   DISPLAY "W-VPTR-A992 3 POSITIONS : '" W-VPTR-A992 "'".
		   DISPLAY "ARG5-XJ52 3 POSITIONS : '" ARG5-XJ5 "'".
           DISPLAY "ARG5-XJ5 (1:W-LG) 3 POSITIONS : '" ARG5-XJ5(1:W-LG) 
                   "'".
           DISPLAY "LENGTH 1: '" LENGTH OF ARG5-XJ5 "'".
		   DISPLAY "LENGTH 2: '" LENGTH OF ARG5-XJ5 (1:W-LG) "'".
           DISPLAY "SORTIE TESTIT".
       M230.
           EXIT PROGRAM.
      
])

AT_DATA([caller.cob], [
       IDENTIFICATION DIVISION .
       PROGRAM-ID .   caller.
       ENVIRONMENT    DIVISION .
       CONFIGURATION  SECTION .
       INPUT-OUTPUT SECTION .
       FILE-CONTROL .    
       DATA DIVISION.
       FILE SECTION .
       WORKING-STORAGE SECTION.

       01  ARG5-XJ5.                                                    
            05 CARARG5    PIC X OCCURS 1000 DEPENDING ON W-LG.
000000 01  W-LG                      PIC S9(9) COMP-5 SYNC .
       01 W-VPTR-A992                      PIC       X(234).
       LINKAGE SECTION.
       PROCEDURE DIVISION.
       P10.
           DISPLAY "DEBUT CALL".
           MOVE 1000 TO W-LG.
           MOVE ALL 'B' TO ARG5-XJ5.
           DISPLAY "ARG5-XJ5 3 POSITIONS : '" ARG5-XJ5 "'".
           DISPLAY "APPEL MODULE TESTIT".
           DISPLAY "LENGTH 0: '" LENGTH OF ARG5-XJ5 "'".
           CALL "calle" USING ARG5-XJ5. 
                          
       P90.
           DISPLAY "SORTIE".
           STOP RUN RETURNING 0.
])

AT_CHECK([${COMPILE} -std=default -o prog caller.cob calle.cob])

AT_CHECK([./prog], [0], 
[DEBUT CALL
ARG5-XJ5 3 POSITIONS : ''
APPEL MODULE TESTIT
LENGTH 0: '000001000'
ENTREE TESTIT
ARG5-XJ5 3 POSITIONS : 'BB'
W-VPTR-A992 3 POSITIONS : 'BB                                                                                                                                                                                                                                        '
W-VPTR-A992 3 POSITIONS : 'BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB'
ARG5-XJ52 3 POSITIONS : 'BB'
ARG5-XJ5 (1:W-LG) 3 POSITIONS : ''
LENGTH 1: '000000002'
LENGTH 2: '000001000'
SORTIE TESTIT
SORTIE
])

AT_CHECK([${COMPILE} -std=default -debug -o prog caller.cob calle.cob])
AT_CHECK([./prog], [142], 
[DEBUT CALL
ARG5-XJ5 3 POSITIONS : ''
APPEL MODULE TESTIT
LENGTH 0: '000001000'
ENTREE TESTIT
ARG5-XJ5 3 POSITIONS : 'BB'
W-VPTR-A992 3 POSITIONS : 'BB                                                                                                                                                                                                                                        ']
,
[calle.cob:23: libcob: Length of 'ARG5-XJ5' out of bounds: 1000
])

